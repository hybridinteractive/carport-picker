# Turso (Drizzle)
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=

# OpenAI (chat)
NUXT_OPENAI_API_KEY=

# Google AI (Carport Builder / visualizer image generation)
# GOOGLE_AI_API_KEY=
# Alternative env name: NANO_BANANA_API_KEY=

# Resend (quote form)
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_RECIPIENT_EMAIL=you@yourdomain.com
# Optional: extra addresses for quote notifications (comma- or space-separated; no spaces around =)
# RESEND_ADDITIONAL_RECIPIENTS=other@example.com,team@example.com
# On Cloudflare Pages, set this in Project settings â†’ Environment variables too.

# Chat magic-link verification (base URL for email links; secret for signing verified-email cookie)
NUXT_APP_BASE_URL=https://your-site.pages.dev
NUXT_COOKIE_SECRET=

# Sales admin (optional; password for /admin leads dashboard)
# NUXT_ADMIN_SECRET=

# Quote webhook (optional; POST new quote payload to this URL for CRM/Zapier)
# QUOTE_WEBHOOK_URL=

# Calendly (optional; "Schedule a call" link on quote success and admin lead view)
# NUXT_CALENDLY_URL= or CALENDLY_URL=

# Sentry (optional; can also be set in Cloudflare dashboard)
SENTRY_DSN=
